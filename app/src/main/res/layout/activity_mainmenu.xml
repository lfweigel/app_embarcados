<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="emb.mobiliando.MainMenuActivity"
    android:background="@drawable/orange_bg1">

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/living_room1"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo1"
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Editar Projeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/editButton"
        android:layout_alignRight="@+id/imageView5"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="Novo Projeto "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/cameraButton"
        android:layout_alignRight="@+id/imageView5"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="17dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/editButton"
        android:onClick="editProject"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/cameraButton"
        android:layout_alignLeft="@+id/cameraButton"
        android:layout_alignStart="@+id/cameraButton"
        android:background="@null"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/cameraButton"
        android:onClick="newProject"
        android:layout_marginTop="27dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:background="@null"
        android:layout_below="@+id/imageView5"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />

</RelativeLayout>
